{
  "license": "Zlib",
  "source": [
    {
      "type": "tarball",
      "url": "https://zlib.net/zlib-1.3.1.tar.gz",
      "strip_components": 1,
      "dest": "zlib"
    }
  ],
  "build": [
    {
      "run": ["./configure", "--prefix=${PREFIX}"],
      "cwd": "zlib"
    },
    {
      "run": ["make", "-j${JOBS}"],
      "cwd": "zlib"
    },
    {
      "run": ["make", "install", "DESTDIR=${DESTDIR}"],
      "cwd": "zlib"
    }
  ]
}
